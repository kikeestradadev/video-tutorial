block config
	include vars
	include mixins/mixins 
doctype html
html(lang='en' prefix='og: http://ogp.me/ns#', class='no-js')
	head
		include utilis/metatags 
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
		<link href="https://vjs.zencdn.net/8.16.1/video-js.css" rel="stylesheet" />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		link(rel="stylesheet" href="styles.css")
		title= currentPage.slice(0,1).toUpperCase() + currentPage.slice(1) + " | " + siteName
	body(class=currentPage, itemscope itemtype="http://schema.org/WebPage")
		//- here start the Main Header
		header(class='main-header')
			block main-header
		//- here ends the Main Header
		//- here start the Main Container
		main(class='main-container')
			block main-container
		//- here ends the Main Container
		//- here start the Main Footer
		footer(class='main-footer')
			span(class='main-footer__copy') Copyright &copy;2024, VT Video Tutorials. All rights reserved.
			block main-footer
		//- here ends the Main Footer
		// Modal 1
		div(id='exampleModalToggle1' class='modal fade modal-fullscreen-sm-down' aria-hidden='true' aria-labelledby='exampleModalToggleLabel1' tabindex='-1')
			.modal-dialog.modal-dialog-centered.video-filter-modal.modal-xl
				.modal-content
					.modal-body
						img(src="https://img.betanysports.eu/landing/videos/close.svg", alt="close" class='video-filter-modal__close-modal' data-bs-dismiss='modal')
						video#videoElement.video-js.vjs-default-skin(width="100%" height="auto" controls autoplay loop muted preload="auto")
							source#videoSource(src='' type='video/mp4')
		<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
		<script src="https://vjs.zencdn.net/8.16.1/video.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
		script(src="index.js")
		block scripts 
